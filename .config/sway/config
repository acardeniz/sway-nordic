# Opacity

# Tüm pencerelere şeffaflık
for_window [class=".*"] opacity 0.95
for_window [app_id=".*"] opacity 0.95

# Özel uygulamalar için farklı şeffaflık (opsiyonel)
for_window [app_id="kitty"] opacity 0.85
for_window [app_id="Alacritty"] opacity 0.95
for_window [class="firefox"] opacity 0.98
for_window [class="Code"] opacity 0.95
for_window [app_id="org.gnome.Nautilus"] opacity 0.95
for_window [class="spotify"] opacity 0.65
for_window [class="Stremio"] opacity 1
for_window [class="com.stremio.stremio"] opacity 1
for_window [app_id="com.stremio.stremio"] opacity 1

# Terminal'leri daha şeffaf yapmak istersen
for_window [app_id="kitty"] opacity 0.90
for_window [app_id="foot"] opacity 0.90

# Floating pencerelere farklı şeffaflık
for_window [floating] opacity 0.90



