workspace 1 output eDP-1
workspace 2 output eDP-1
workspace 3 output eDP-1
workspace 4 output eDP-1
workspace 5 output eDP-1
workspace 6 output eDP-1
workspace 7 output eDP-1
workspace 8 output eDP-1
workspace 9 output eDP-1
workspace 10 output eDP-1


#titlebar
for_window [class=".*"] border pixel 2
for_window [app_id=".*"] border pixel 2

for_window [class=".*"] title_format "%app_id"
for_window [class=".*"] title_format "%class"
for_window [app_id="firefox"] title_format "Firefox"
for_window [app_id="org.mozilla.firefox"] title_format "Firefox"
for_window [app_id="com.stremio.stremio"] border none
#borders
for_window [class="Stremio"] border none
for_window [class="com.stremio.stremio"] border none

